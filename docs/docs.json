  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "favicon": "/favicon.png",
  "colors": {
    "primary": "#0D9488",
    "light": "#14B8A6",
    "dark": "#0F766E"
  },
  "styling": {
    "css": "styles.css"
  },
  "navbar": {
    "links": [
      {
        "label": "Registry",
        "href": "https://aris-registry.onrender.com"
      },
      {
        "label": "GitHub",
        "href": "https://github.com/aris-labs"
      }
    ],
    "primary": {
      "type": "button",
